rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /products/{doc} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }

    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
